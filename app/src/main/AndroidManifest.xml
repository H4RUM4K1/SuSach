<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SuSach"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".SuSachApp">
        <activity 
            android:name=".navigation.MainActivity"
            android:exported="true" />
        <activity 
            android:name=".auth.login.ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".auth.register.ui.RegisterActivity"
            android:exported="true" />
        <activity 
            android:name=".profile.ui.ProfileActivity"
            android:exported="true"
            android:launchMode="singleTop" />
    </application>
</manifest>
